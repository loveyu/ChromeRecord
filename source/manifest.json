{
  "manifest_version": 3,
  "name": "访问统计",
  "description": "记录一切关于Chrome中的访问记录",
  "version": "1.1",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*"
      ],
      "css": [
      ],
      "js": [
        "page_bg.js"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "http://*/*",
    "https://*/*",
    "file://*"
  ]
}
